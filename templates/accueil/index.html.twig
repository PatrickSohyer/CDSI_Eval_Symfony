{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			{% if is_granted("ROLE_ADMIN") %}
            {% for forma in listFormation %}     
				<div class="col-4 mt-4">
					<div class="card" style="width: 18rem;">
						<div class="card-header">
							{{ forma.nom }}
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">Début le {{ forma.dateDebut | date('d/m/Y')}}</li>
							<li class="list-group-item">Fin le {{ forma.dateFin | date('d/m/Y')}}</li>
						</ul>
						<div class="card-body text-center">
							<a href="{{ path ('formation_id', {id: forma.id}) }}" class="card-link">Détails de la formation</a>
						</div>
					</div>
				</div>
            {% endfor %}
			</div>
		</div>
	{% endif %}
	{% for forma in listFormation %}
		{% for user in forma.utilisateurs %}
			{% if app.user.id == user.id and is_granted("ROLE_FORMATEUR") == "ROLE_FORMATEUR" %}
				<h2>{{ forma.nom }}</h2>
			{% elseif app.user.id == user.id and is_granted("ROLE_ETUDIANT") == "ROLE_ETUDIANT"  %}
				<h3>{{ forma.dateDebut | date('d/m/Y') }}</h3>
			{% endif %}
		{% endfor %}
	{% endfor %}

{% endblock %}
